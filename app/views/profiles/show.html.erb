<div class="row">
  <div class="col-md-3">
    <%= image_tag current_user.profile_img ,style:'border-radius:50%; width:100%; height:auto; max-width:300px' %>
  </div>
  <div class="col-md-9" style="padding-left:10%; padding-top: 2%;">
    <h2 class="profile-name"><%=@user.name%></h2>

      <%if current_user == @user %>
      <%= link_to '프로필 편집', edit_user_url(@user), {class: "btn btn-default profile-edit" } %></h2>
          <%else%>
      <%= link_to follow_user_path(@user), method: :put, remote: true do%>
          <% if current_user.following?(@user) %>
                  <button class = "btn btn-default" style="background: white; border:solid 1px #dbdbdb;">팔로윙</button>
                  <%else%>
              <button class = "btn btn-primary"> 팔로우 </button>
                <%end%>
      <%end%>
  <%end%>



    <div>
      <span class="profile-text">
        게시물 <%= @user.posts.size %>
      </span>
      <span class="profile-text">
        팔로우 0
      </span>
      <span class="profile-text">
        팔로워 0
      </span>
    </div>
  </div>
</div>




<br/>
<br/>

<div class="profile-body">
  <div class="row">
  <% @posts.each do |post|%>
      <a href="<%=post_path(post.id)%>" class ="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="padding-bottom: 10px;">
      <%=image_tag post.img_path, style:'width:100%; height:100%'%>
      </a>

  <%end%>
  </div>
</div>






<div class="footer posting-icon">
  <%=render 'layouts/footer'%>
</div>


